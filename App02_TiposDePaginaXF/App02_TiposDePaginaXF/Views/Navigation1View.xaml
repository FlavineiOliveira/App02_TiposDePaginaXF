<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TiposDePaginaXF.Views.Navigation1View"
             Title="Primeira página">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="xamarin.png" Text="Pesquisa" />
        <ToolbarItem Icon="xamarin.png" Text="Ordenar" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Olá, esta é a primeira página utilizando o navigation!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Próximo Página" Clicked="ProximoPagina_Clicked" />
            <Button Text="Abrir Modal" Clicked="AbrirModal_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>